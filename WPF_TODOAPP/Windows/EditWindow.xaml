<Window x:Class="WPF_TODOAPP.Windows.NewFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_TODOAPP.Windows"
        mc:Ignorable="d"
        Background="DeepPink"
        Title="Edit ToDo" Height="200" Width="200">
    <Grid>
        <Label Content="Curent title:" x:Name="CurentTitle" HorizontalAlignment="Center" Margin="0,22,0,0" Foreground="White" VerticalAlignment="Top" RenderTransformOrigin="1.534,-0.759" Width="181"/>
        <Label Content="New title:" HorizontalAlignment="Left" Margin="6,52,0,0" Foreground="White" VerticalAlignment="Top" RenderTransformOrigin="0.437,1.648"/>
        <TextBox x:Name="TitleInput" HorizontalAlignment="Left" Margin="70,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <CheckBox Content="Done" x:Name="IsDoneInput" Foreground="White" HorizontalAlignment="Center" Margin="0,92,0,0" VerticalAlignment="Top"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="28,132,0,0" VerticalAlignment="Top" Width="55" Click="SaveButton_Click" />
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="110,132,0,0" VerticalAlignment="Top" Width="55" Click="CancelButton_Click"/>

    </Grid>
</Window>
