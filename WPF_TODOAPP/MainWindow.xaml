<Window x:Class="WPF_TODOAPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_TODOAPP"
        mc:Ignorable="d"
        Background="#6c2977"
        Foreground="White"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Title="MainWindow" Height="450" Width="300">

    <Grid>
        <ListBox x:Name="ToDoListBox" Width="250" Height="300" Background="#844A8A" Margin="25,20,25,114">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Background="#9D008A">
                        <TextBlock Text="{Binding Title}" Foreground="White" />
                        <CheckBox IsChecked="{Binding IsDone}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Přidat!" Click="Button_Click" HorizontalAlignment="Left" Margin="42,348,0,0" VerticalAlignment="Top" Height="28" Width="73" Background="DeepPink"/>

    </Grid>
</Window>
